# We need repl 
if [ -x "$(which repl)" ]; then 
  realgit=$(which git)
  
  git() { 
    if [[ $# == 0 ]]; then
      repl git;
    else
      $realgit $*; 
    fi
  }
fi


# Do we have gitdown ?
